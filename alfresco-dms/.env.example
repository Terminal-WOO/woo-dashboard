# Alfresco DMS Environment Configuration

# PostgreSQL Database
POSTGRES_DB=alfresco
POSTGRES_USER=alfresco
POSTGRES_PASSWORD=alfresco

# MinIO S3 Storage
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio
MINIO_PORT=9000

# Alfresco Admin
ALFRESCO_ADMIN_USER=admin
ALFRESCO_ADMIN_PASSWORD=admin

# ActiveMQ
ACTIVEMQ_ADMIN_USER=admin
ACTIVEMQ_ADMIN_PASSWORD=admin

# Solr Secret (for secure comms)
SOLR_SECRET=secret

# Memory Settings (adjust based on available RAM)
# Development: 1.5GB for repo, 500MB for share
# Production: 4GB+ for repo, 1GB for share
ALFRESCO_XMS=1500m
ALFRESCO_XMX=1500m
SHARE_XMS=500m
SHARE_XMX=500m

# Content Store Type
# s3 = MinIO (default)
# local = Docker volume
CONTENT_STORE_TYPE=s3

# MinIO Buckets
S3_BUCKET_NAME=alfresco-content
S3_DELETED_BUCKET_NAME=alfresco-deleted

# MinIO Metadata Sync
SYNC_MODE=continuous
SYNC_INTERVAL_MINUTES=5

# Timezone
TZ=Europe/Amsterdam
